<Page x:Class="InjectionSoftware.Pages.ConsoleLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InjectionSoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConsoleLogPage">

    <Grid Background="#FFE5E5E5">
        <Border Margin="15" BorderThickness="7" BorderBrush="Black" Background="White">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding ConsoleLogString}" />
            </ScrollViewer>
        </Border>
        
    </Grid>
</Page>
